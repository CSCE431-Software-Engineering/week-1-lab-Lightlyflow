<% flash.each do |type, msg| %>
  <div class="alert alert-info">
    !!! <%= msg %> !!!
  </div>
<% end %>

<h1>Library</h1>
<%= link_to 'New Book', new_book_path() %>

<h2>Books</h2>
<table>
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Price</th>
        <th>Published</th>
        <th>Actions</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
        <td><%= book.title %></td>
        <td></td>
        <td></td>
        <td></td>
        <td class="actions">
            <%= link_to("Show", book_path(book, class: "action show")) %>
            <%= link_to("Edit", edit_book_path(book)) %>
            <%= link_to("Delete", delete_book_path(book)) %>
        </td>
    </tr>
    <% end %>
</table>
