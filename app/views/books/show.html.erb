<%= link_to("Back to Library", books_path, :class => 'back-link') %>

<h2>Show Book</h2>

<%= link_to("Edit", edit_book_path(@book)) %>
<%= link_to("Delete", delete_book_path(@book)) %>

<table style="">
  <tr>
    <th>Title:</th>
    <td><%= @book.title %></td>
  </tr>
  <tr>
    <th>Author:</th>
    <td><%= @book.author %></td>
  </tr>
  <tr>
    <th>Price:</th>
    <td><%= @book.price %></td>
  </tr>
  <tr>
    <th>Published on:</th>
    <td><%= @book.published %></td>
  </tr>
</table>